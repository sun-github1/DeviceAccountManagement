@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> signInManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DeviceCredentialManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>

        @*<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">*@
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-primary border-bottom box-shadow mb-3">
            <div class="container">
                @* @if (signInManager.IsSignedIn(User))
        {
            <a class="navbar-brand" asp-area="" asp-page="/DeviceAccounts/Index">Site Account Management</a>*@
                <a class="navbar-brand" href="#"> <img src="~/images/accountpic.png" alt="" height="50"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @*}*@
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    @if (!signInManager.IsSignedIn(User))
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <label id="fakeid" class="nav-link text-light"></label>
                                @*<a class="nav-link text-light" href="/Account/Register">Register</a>*@
                            </li>
                            @*   <li class="nav-item">
                        <a class="nav-link text-light" href="/Account/Login">Login</a>
                    </li>*@
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav">
                            @if (User.IsInRole("administrator"))

                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Manage
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                        <a class="dropdown-item" href="/Account/ListUsers">Users</a>
                                        <a class="dropdown-item" href="/Account/ListRoles">Roles</a>
                                    </div>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-light" href="/Account/ChangePassword">Change Password</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" href="/Account/Logout">Logout @User.Identity.Name</a>
                            </li>
                        </ul>
                    }
                    @if (signInManager.IsSignedIn(User))
                    {
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-page="/DeviceAccounts/Index">Lists</a>
                    </li>
                    <li class="nav-item dropdown">
                        @*<li class="nav-item">*@
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink"
                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Generate Accounts
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" asp-area="" asp-page="/DeviceAccounts/Edit">Add Single</a>
                            <a class="dropdown-item" asp-area="" asp-page="/DeviceAccounts/Batch">Add In Batch for Camera</a>
                        </div>
                        @*</li>*@
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-page="/DeviceAccounts/About">About</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-page="/DeviceAccounts/About">About</a>
                    </li>
                </ul>
                    }

                </div>
            </div>
        </nav>

    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - DeviceCredentialManagement - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    @*<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap-confirmation.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
