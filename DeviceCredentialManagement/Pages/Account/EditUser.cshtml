@page
@model DeviceCredentialManagement.Pages.Account.EditUserModel
@{
}

<h1>Edit User</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="UserToEdit.Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="UserToEdit.Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="UserToEdit.Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="UserToEdit.Email" class="form-control">
            <span asp-validation-for="UserToEdit.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="UserToEdit.UserName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="UserToEdit.UserName" class="form-control">
            <span asp-validation-for="UserToEdit.UserName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-page="ListUsers" class="btn btn-primary">Cancel</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>User Roles</h3>
        </div>
        <div class="card-body">
            @if (Model.Roles.Any())
            {
                foreach (var role in Model.Roles)
                {
                    <h5 class="card-title">@role</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-page="ManageUserRoles" asp-route-userid="@Model.UserToEdit.Id" style="width:auto" class="btn btn-primary">
                Manage Roles
            </a>
        </div>
    </div>

  
</form>