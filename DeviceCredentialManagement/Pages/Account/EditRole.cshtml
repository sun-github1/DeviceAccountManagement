@page
@model DeviceCredentialManagement.Pages.Account.EditRoleModel
@{
    ViewData["Title"] = "Edit Role";
}


<h1>Edit Role</h1>

<form method="post" class="mt-3">
    <input type="hidden" asp-for="@Model.RoleEdit.Id" />
    <div class="form-group row">
        <label asp-for="@Model.RoleEdit.Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.RoleEdit.Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="@Model.RoleEdit.RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.RoleEdit.RoleName" class="form-control">
            <span asp-validation-for="@Model.RoleEdit.RoleName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-page="ListRoles" class="btn btn-primary">Cancel</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Users in this role</h3>
        </div>
        <ul class="list-group list-group-flush">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <li class="list-group-item">
                        @user
                    </li>
                }
            }
            else
            {
                <li class="list-group-item">
                    None at the moment
                </li>
            }
        </ul>
        @*<div class="card-body">
                @if (Model.Users.Any())
                {
                    foreach (var user in Model.Users)
                    {
                        <h5 class="card-title">@user</h5>
                    }
                }
                else
                {
                    <h5 class="card-title">None at the moment</h5>
                }
            </div>*@
        <div class="card-footer">
            <a asp-Page="EditUsersInRole"
               asp-route-roleId="@Model.RoleEdit.Id" class="btn btn-primary">
                Add or remove users from this role
            </a>
            @*<a href="#" class="btn btn-primary" style="width:auto">Add Users</a>
                <a href="#" class="btn btn-primary" style="width:auto">Remove Users</a>*@
        </div>
    </div>
</form>