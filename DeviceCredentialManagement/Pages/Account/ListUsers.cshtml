@page
@model DeviceCredentialManagement.Pages.Account.ListUsersModel
@{
    ViewData["Title"] = "ListUsers";
}


<h1>All Users</h1>

@if (Model.Users != null && Model.Users.Count > 0)
{
    <a asp-page="Register"
       class="btn btn-primary mb-3" style="width:auto">
        Add new user
    </a>

    <table class="table table-hover">
        <tr>
            <th>User Id</th>
            <th>User Name</th>
            <th></th>
        </tr>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>
                    User Id : @user.Id
                </td>
                <td>
                    <h5 class="card-title">@user.UserName</h5>
                </td>
                <td>

                    <form method="post" asp-page-handler="DeleteUser" asp-route-id="@user.Id">
                        <a asp-page="EditUser" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                        <span id="confirmDeleteSpan_@user.Id" style="display:none">
                            <span>Are you sure you want to delete?</span>
                            <button type="submit" class="btn btn-danger">Yes</button>
                            <a href="#" class="btn btn-primary"
                               onclick="confirmDelete('@user.Id', false)">No</a>
                        </span>
                        <span  id="deleteSpan_@user.Id">
                            <a href="#" class="btn btn-danger" onclick="confirmDelete('@user.Id',true)">Delete</a>
                            </span>
                    </form>
                </td>
            </tr>
        }
    </table>
}
else
{
    <div class="card">
        <div class="card-header">
            No users created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a user
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-page="Register">
                Add new user
            </a>
        </div>
    </div>
}

@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}
