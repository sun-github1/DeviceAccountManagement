@page
@model DeviceCredentialManagement.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register User";
}


<h1>User Registration</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="All" class="bg-warning text-dark"></div>
            <div class="form-group">
                <label asp-for="@Model.RegisterUserAccount.Email"></label>
                <input asp-for="@Model.RegisterUserAccount.Email" class="form-control" />
                <span asp-validation-for="@Model.RegisterUserAccount.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.RegisterUserAccount.Password"></label>
                <input asp-for="@Model.RegisterUserAccount.Password" class="form-control" />
                <span asp-validation-for="@Model.RegisterUserAccount.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.RegisterUserAccount.ConfirmPassword"></label>
                <input asp-for="@Model.RegisterUserAccount.ConfirmPassword" class="form-control" />
                <span asp-validation-for="@Model.RegisterUserAccount.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>