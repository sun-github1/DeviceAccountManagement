@page
@model DeviceCredentialManagement.Pages.Account.CreateRoleModel
@{
    ViewData["Title"] = "Create Role";
}
<h1>Create Role</h1>

<form  method="post" class="mt-3">
    <div asp-validation-summary="All" class="bg-warning text-dark">
    </div>
    <div class="form-group row">
        <label asp-for="@Model.NewRole.RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.NewRole.RoleName" class="form-control" placeholder="Name">
            <span asp-validation-for="@Model.NewRole.RoleName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" style="width:auto">
                Create Role
            </button>
        </div>
    </div>
</form>