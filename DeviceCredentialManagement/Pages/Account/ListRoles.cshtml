@page
@model DeviceCredentialManagement.Pages.Account.ListRolesModel
@{
    ViewData["Title"] = "List of Roles";
}


<h1>All Roles</h1>

@if (Model.ListofRoles != null && Model.ListofRoles.Count > 0)
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-page="CreateRole">Add new role</a>
    <table class="table table-hover">
        <tr>
            <th>Role Id</th>
            <th>Name</th>
            <th></th>
        </tr>
        @foreach (var role in Model.ListofRoles)
        {

        <tr>
            <td>
                @role.Id
            </td>
            <td>
                @role.Name
            </td>
            <td>
                <a class="btn btn-primary" asp-page="EditRole" asp-route-id="@role.Id">Edit</a>
                <a class="btn btn-danger" asp-page="DeleteRole">Delete</a>
            </td>
        </tr>
        }
    </table>

}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a role
            </h5>
            <a class="btn btn-primary" style="width:auto" asp-page="CreateRole">
                Create Role
            </a>
        </div>
    </div>
}